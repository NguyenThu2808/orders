<!-- BEGIN: Content-->
<div class="app-content content ">
  <div class="content-overlay"></div>
  <div class="header-navbar-shadow"></div>
  <div class="content-wrapper container-xxl p-0">
    <div class="content-header row">
    </div>
    <div class="content-body">
      <div class="card">
        <div class="card-header">
          <h4 class="card-title">Edit dish</h4>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-6">
              <p class="card-text">
              </p>
              <%= form_for dish do |f| %>
                <div class="form-group">
                  <%= f.label :category_id, "Phân loại" %>
                  <%= f.collection_select :category_id, categories, :id,
                    proc {|category| category.name}, {},
                    {class: "form-control select2"} %>
                </div>
                <div class="form-group">
                  <%= f.label :name, "Tên mon an" %>
                  <%= f.text_field :name, class: "form-control" %>
                </div>

                <div class="form-group">
                  <%= f.label :price, "Gia" %>
                  <%= f.text_field :price, class: "form-control" %>
                </div>
                <% if f.object.errors.full_messages_for("price").present? %>
                  <span style="color: red;"><%= f.object.errors.full_messages_for("price").first %></span>
                <% end %>

                <div class="form-group mt-50">
                  <%= f.submit "Lưu lại", class: "btn btn-outline-primary waves-effect waves-float waves-light" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

